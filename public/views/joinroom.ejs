            <label for="roomname" class="my-2 form-label">Room Code</label>
            <input class="form-control" type="text" name="roomname" id="roomname" required>

            <button class="btn btn-primary my-3">Join</button>

        </form>
    </div>
    <div id="txt"></div>

    <style>
        a {
            text-decoration: none;
            color: black;
        }

        a:hover {
            color: black;
            text-decoration: underline;
        }
